# ============================================================
# FinSight Backend — Environment Configuration
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================

# --- MongoDB ---
MONGO_URL="mongodb://localhost:27017"
DB_NAME="finsight"

# --- Firebase Authentication (optional — currently stubbed out) ---
# FIREBASE_PROJECT_ID="your-firebase-project-id"
# FIREBASE_SERVICE_ACCOUNT_PATH="./firebase-service-account.json"

# --- LLM API Keys ---
# At least one key is required for AI features to work.
# Users can also supply their own keys via Settings → API Keys in the app.
OPENAI_API_KEY=""
GEMINI_API_KEY=""
CLAUDE_API_KEY=""

# --- Default LLM Provider & Models ---
# Used as fallback when the user has no preferred provider set.
# Provider options: openai | gemini | claude
DEFAULT_LLM_PROVIDER="gemini"
OPENAI_MODEL="gpt-5-mini"
GEMINI_MODEL="gemini-3.0"
CLAUDE_MODEL="claude-sonnet-4-6"

# --- Fernet Encryption Key ---
# Used to encrypt user API keys and broker credentials stored in MongoDB.
# Generate with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# WARNING: Changing this key will invalidate all existing encrypted data.
FERNET_KEY=""

# --- CORS ---
# Comma-separated list of allowed frontend origins.
ALLOWED_ORIGINS="http://localhost:8081,http://localhost:19006,http://localhost:8082"

# --- Rate Limiting ---
# Use "memory://" for local dev. For production, use a Redis URI:
#   redis://localhost:6379
RATE_LIMIT_STORAGE_URI="memory://"

# --- AI Daily Quota ---
# Maximum number of AI analysis requests per user per day.
AI_FREE_TIER_DAILY_LIMIT=10
